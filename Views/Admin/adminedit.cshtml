                                    </tr>






                                </tbody>
                            </table>
                            <div class="text-end">
                                <td><a a asp-area="" asp-controller="Admin" asp-action="admin" class="btn btn-outline-secondary m-1">Back</a></td>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

