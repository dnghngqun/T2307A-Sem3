@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
<br />
<br />
<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body p-4">
                    <h1>Account Edit</h1>
                    <div class="container mt-5 px-2">

                        <div class="mb-2 d-flex justify-content-between align-items-center">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless">


                                <tbody>
                                    <tr>

                                        <div class="col-md-12"><label class="labels">Username</label><input type="text" class="form-control" placeholder="Enter Username" value=""></div>
                                        <div class="col-md-12"><label class="labels">Fullname</label><input type="text" class="form-control" placeholder="Enter Fullname" value=""></div>
                                        <div class="col-md-12"><label class="labels">Password</label><input type="text" class="form-control" placeholder="Enter Password" value=""></div>

                                        <div class="col-md-12"><label class="labels">Email</label><input type="text" class="form-control" placeholder="Enter Email" value=""></div>
                                        Role
                                        <select class="form-control" id="condition">
                                            <option value="true">Student</option>
                                            <option value="false">Admin</option>
                                        </select>

                                        <td><a a asp-area="" asp-controller="Admin" asp-action="admin_account" class="btn btn-outline-success m-1">Save</a></td>

                                    </tr>






                                </tbody>
                            </table>
                            <td><a a asp-area="" asp-controller="Admin" asp-action="admin_account" class="btn btn-outline-secondary m-1">Back</a></td>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>