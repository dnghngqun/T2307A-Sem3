@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
<br /><br /><br />
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body p-4">
                    <div class="container mt-5 px-2">
                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <div class="d-flex">
                                <input type="text" class="form-control" placeholder="Search">
                                <button type="button" class="btn btn-primary btn-search ms-2">Search</button>
                            </div>
                            <div><a a asp-area="" asp-controller="Admin" asp-action="admin_exam_add" class="btn btn-outline-secondary btn-add m-1">Add</a></div>

                        </div>
                        <div class="mb-2 d-flex justify-content-between align-items-center">
                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless">

                                <thead>
                                    <tr class="bg-light">


                                        <th>Course</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Condition</th>
                                        <th scope="col" width="35%">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>


                                        <td>JavaScript</td>
                                        <td><i class="fa fa-check-circle-o green"></i><span class="ms-1">11-01-2024</span></td>
                                        <td>40 minute</td>
                                        <td>End</td>
                                        <td><button type="button" class="btn btn-outline-danger m-1">Delete</button>
                                            <a a asp-area="" asp-controller="Admin" asp-action="admin_exam_edit" class="btn btn-outline-success m-1">Edit</a>
                                            <a a asp-area="" asp-controller="Admin" asp-action="admin_exam_assess" class="btn btn-outline-info m-1">Assess</a>
                                        <a a asp-area="" asp-controller="Admin" asp-action="admin_exam_student" class="btn btn-outline-primary m-1">View</a></td>
                                    </tr>

                                   




                                </tbody>
                            </table>
                            
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>