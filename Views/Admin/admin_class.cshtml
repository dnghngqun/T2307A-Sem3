@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
<br />
<br />
<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body p-4">
                    <div class="container mt-1 px-2">

                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <div class="d-flex">
                                <input type="text" class="form-control" placeholder="Search">
                                <button type="button" class="btn btn-primary btn-search ms-2">Search</button>
                            </div>
                            <div><a a asp-area="" asp-controller="Admin" asp-action="admin_class_add" class="btn btn-outline-secondary btn-add m-1">Add</a></div>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless">

                                <thead>
                                    <tr class="bg-light">
                                        <th scope="col" width="30%">Course</th>
                                        <th>Start</th>
                                        <th>End</th>
                                        <th>Number of students</th>
                                        <th scope="col" width="10%">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="border: 1px solid black;">JavaScript</td>
                                        <td>11-01-2024</td>
                                        <td>11-02-2024</td>
                                        <td><span>2</span></td>
                                        <td class="d-flex align-items-center justify-content-between td-action">
                                            <button type="button" class="btn btn-outline-danger m-1 ">Delete</button>
                                            <a a asp-area="" asp-controller="Admin" asp-action="admin_class_edit" class="btn btn-outline-success m-1">Edit</a>
                                            <a a asp-area="" asp-controller="Admin" asp-action="admin_class_student" class="btn btn-outline-primary m-1">View</a>
                                        </td>
                                    </tr>
                                    


                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>